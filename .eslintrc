{
  "root": true,
  "extends": ["@strv/react-native", "prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
	  "@typescript-eslint/no-floating-promises": "off" // Resolving SplashScreen API ESLint error
},
  "overrides": [
    {
      "files": ["app.config.ts"],
      "rules": {
        "import/extensions": "off",
        "id-length": "off",
        "import/no-default-export": "off"
      }
    }
  ]
}
